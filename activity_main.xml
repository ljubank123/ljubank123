<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/rootView">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Text"
        android:lines="1"
        android:inputType="textPersonName"
        android:textSize="30sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_sharedPreferences"
        android:text="Čuvanje u SharedPreferences"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_internal_cache"
        android:text="Čuvanje u Internal Cache"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_external_cache"
        android:text="Čuvanje u External Cache"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_internal_storage"
        android:text="Čuvanje u Internal Storage"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_external_storage_private"
        android:text="Čuvanje u  External Storage Private"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="store_in_external_storage_public"
        android:text="Čuvanje u External Storage Public"
        android:textColor="#4444ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="go_to_load_text_data_activity"
        android:text="Prelaz na deo za čitanje"
        android:textColor="#dd2222"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:text="@string/text_12"
        android:textSize="16dp"
        android:textColor="#aa0000"/>


</LinearLayout>
