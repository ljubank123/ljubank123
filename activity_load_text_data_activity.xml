<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".load_text_data_activity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_sharedPreferences"
        android:text="Load From SharedPreferences"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_internal_cache"
        android:text="Load From Internal Cache"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_external_cache"
        android:text="Load From External Cache"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_internal_storage"
        android:text="Load From Internal Storage"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_external_storage_private"
        android:text="Load From External Storage Private"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadFrom_external_storage_public"
        android:text="Load From External Storage Public"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clearTV"
        android:text="Clear"
        android:textColor="#22aa66"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="go_to_store_text_data_activity"
        android:text="Back to store"
        android:textColor="#dd2222"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="go_to_home_activity"
        android:text="HOME"
        android:textColor="#4422ff"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_13"
        android:textColor="#aa0000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:text="@string/text_14"
        android:textColor="#aa0000"
        android:textSize="16dp"
        android:textStyle="italic" />


</LinearLayout>
